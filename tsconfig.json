{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"],
      "@main/*": ["src/main/*"],
      "@renderer*/": ["src/main/view/renderer/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/main/view/components/*"],
      "@data/*": ["src/data/*"],
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"]
}
