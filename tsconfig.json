{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/composer/application/*"],
      "@model/*": ["src/composer/domain/model/*"],
      "@components/*": ["src/composer/view/components/*"],
      "@view/*": ["src/composer/view/*"],
      "@main/*": ["src/composer/*"],
      "@public/*": ["public/*"],
      "@/*": ["src/*"],
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"]
}
